{{!
    @template block_catalogue/nav-sort-selector

    This template renders sorting dropdown.

    Example context (json):
    {
        "title": false,
        "lastaccessed": true
    }
}}

<div class="mb-1 me-1 d-flex flex-wrap align-items-center">
    <div class="dropdown">
        <button id="sortingdropdown" type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="{{#str}} aria:sortingdropdown, block_catalogue {{/str}}">
            <span data-active-item-text>
                {{#title}}{{#str}} sortbytitle, block_catalogue {{/str}}{{/title}}
                {{#lastaccessed}}{{#str}} sortbylastaccessed, block_catalogue {{/str}}{{/lastaccessed}}
                {{#published}}{{#str}} sortbypublished, block_catalogue {{/str}}{{/published}}
                {{#shortname}}{{#str}} sortbyshortname, block_catalogue {{/str}}{{/shortname}}
                {{#category}}{{#str}} sortbycategoryname, block_catalogue {{/str}}{{/category}}
                {{#default}}{{#str}} sortbydefault, block_catalogue {{/str}}{{/default}}
            </span>
        </button>
        <ul class="dropdown-menu" role="menu" data-show-active-item data-skip-active-class="true" aria-labelledby="sortingdropdown">
            <li>
                <a class="dropdown-item" href="#" data-filter="sort" data-pref="title" data-value="fullname" aria-controls="courses-view-{{uniqid}}" role="menuitem" {{#title}}aria-current="true"{{/title}}>
                    {{#str}} sortbytitle, block_catalogue {{/str}}
                </a>
            </li>
            {{#showsortbycategory}}
            <li>
                <a class="dropdown-item" href="#" data-filter="sort" data-pref="categoryname" data-value="categoryname" aria-controls="courses-view-{{uniqid}}" role="menuitem" {{#category}}aria-current="true"{{/category}}>
                    {{#str}} sortbycategoryname, block_catalogue {{/str}}
                </a>
            </li>
            {{/showsortbycategory}}
            {{#showsortbyshortname}}
            <li>
                <a class="dropdown-item" href="#" data-filter="sort" data-pref="shortname" data-value="shortname" aria-controls="courses-view-{{uniqid}}" role="menuitem" {{#shortname}}aria-current="true"{{/shortname}}>
                    {{#str}} sortbyshortname, block_catalogue {{/str}}
                </a>
            </li>
            {{/showsortbyshortname}}
            {{#isloggedin}}
            <li>
                <a class="dropdown-item" href="#" data-filter="sort" data-pref="lastaccessed" data-value="ul.timeaccess desc" aria-controls="courses-view-{{uniqid}}" role="menuitem" {{#lastaccessed}}aria-current="true"{{/lastaccessed}}>
                    {{#str}} sortbylastaccessed, block_catalogue {{/str}}
                </a>
            </li>
            {{/isloggedin}}
            <li>
                <a class="dropdown-item" href="#" data-filter="sort" data-pref="published" data-value="startdate desc" aria-controls="courses-view-{{uniqid}}" role="menuitem" {{#published}}aria-current="true"{{/published}}>
                    {{#str}} sortbypublished, block_catalogue {{/str}}
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="#" data-filter="sort" data-pref="title" data-value="default" aria-controls="courses-view-{{uniqid}}" role="menuitem" {{#title}}aria-current="true"{{/title}}>
                    {{#str}} sortbydefault, block_catalogue {{/str}}
                </a>
            </li>
        </ul>
    </div>
</div>
