{{!
    @template block_catalogue/course-action-menu

    This template renders action menu for each course.

    Example context (json):
    {
        "isfavourite": true
    }
}}
{{#actionmenu}}
<div class="ms-auto dropdown">
    <button class="btn btn-icon coursemenubtn aabtn"
        type="button"
        data-bs-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false">
        <i class="icon fa fa-ellipsis-v fa-fw m-0" title="{{#str}} aria:courseactions, block_catalogue {{/str}} {{{fullname}}}" aria-hidden="true"></i>
        <span class="visually-hidden">{{#str}} aria:courseactions, block_catalogue {{/str}} {{{fullname}}}</span>
    </button>
    <div class="dropdown-menu dropdown-menu-end">
        <a class="dropdown-item {{#isfavourite}}hidden{{/isfavourite}}" href="#"
            data-action="add-favourite"
            data-course-id="{{id}}"
            aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
            >
            {{#str}} addtofavourites, block_catalogue {{/str}}
            <div class="visually-hidden">
                {{#str}} aria:addtofavourites, block_catalogue {{/str}} {{{fullname}}}
            </div>
        </a>
        <a class="dropdown-item {{^isfavourite}}hidden{{/isfavourite}}" href="#"
            data-action="remove-favourite"
            data-course-id="{{id}}"
            aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
            >
            {{#str}} removefromfavourites, block_catalogue {{/str}}
            <div class="visually-hidden">
                {{#str}} aria:removefromfavourites, block_catalogue {{/str}} {{{fullname}}}
            </div>
        </a>
        <a class="dropdown-item {{^hidden}}hidden{{/hidden}}" href="#"
            data-action="show-course"
            data-course-id="{{id}}"
            aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
            hidden
            >
            {{#str}} show, block_catalogue {{/str}}
            <div class="visually-hidden">
                {{#str}} aria:showcourse, block_catalogue, {{fullname}} {{/str}}
            </div>
        </a>
        <a class="dropdown-item {{#hidden}}hidden{{/hidden}}" href="#"
            data-action="hide-course"
            data-course-id="{{id}}"
            aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
            hidden
            >
            {{#str}} hidecourse, block_catalogue {{/str}}
            <div class="visually-hidden">
                {{#str}} aria:hidecourse, block_catalogue, {{fullname}} {{/str}}
            </div>
        </a>
        {{#courseadmin}}
        <a class="dropdown-item" href="/course/edit.php?id={{id}}"
            data-action="edit-course"
            data-course-id="{{id}}"
            aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
            >
            {{#str}} editcourse, block_catalogue {{/str}}
            <div class="visually-hidden">
                {{#str}} aria:editcourse, block_catalogue, {{fullname}} {{/str}}
            </div>
        </a>
        <a class="dropdown-item" href="/report/log/index.php?id={{id}}"
            data-action="log-course"
            data-course-id="{{id}}"
            aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
            >
            {{#str}} logcourse, block_catalogue {{/str}}
            <div class="visually-hidden">
                {{#str}} aria:logcourse, block_catalogue, {{fullname}} {{/str}}
            </div>
        </a>
        {{/courseadmin}}
    </div>
</div>
{{/actionmenu}}