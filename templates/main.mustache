{{!
    @template block_catalogue/main

    This template renders the main content area for the catalogue block.

    Example context (json):
    {}
}}

<div id="block-catalogue-{{uniqid}}" class="block-catalogue block-cards" data-region="catalogue" role="navigation">
  <div role="search" data-region="filter" class="d-flex justify-content-between g-0 mb-1" aria-label="{{#str}} aria:controls, block_catalogue {{/str}}">
    {{#config.userId}}
    {{> block_catalogue/nav-category-selector }}
    <div class="d-flex g-0 align-items-start flex-wrap">

        {{> block_catalogue/nav-search-widget }}

        {{> block_catalogue/nav-grouping-selector }}

        {{> block_catalogue/nav-sort-selector }}

        {{#displaydropdown}}
            {{> block_catalogue/nav-display-selector }}
        {{/displaydropdown}}
    </div>
    {{/config.userId}}
  </div>
    <div class="container-fluid p-0">
        {{> block_catalogue/courses-view }}
    </div>
</div>
{{#js}}
require(
[
    'jquery',
    'block_catalogue/main',
],
function(
    $,
    Main
) {
    var root = $('#block-catalogue-{{uniqid}}');
    Main.init(root);
});
{{/js}}
